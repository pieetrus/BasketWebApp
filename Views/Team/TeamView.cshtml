@model BasketApp.ViewModels.TeamFormViewModel
@{
    ViewData["Title"] = "TeamView";
}

<style>

    .page-title {
        box-sizing: border-box;

        height: 170px;
        width: 100%;

        display: flex;
    }


    .display-4 {
        box-sizing: border-box;
        /*border: 5px dashed blue;*/
        width: 65%;
        height: 60%;

    }

    .player-logo {
        box-sizing: border-box;
        height: 100%;
        float: right;
    }

     
</style>


<div class="page-title">
    <h1 class="display-4">@Model.Team.Name</h1>
    <img class="player-logo" src="@Model.Team.LogoUrl" alt="logo @Model.Team.Name" />
</div>


<p style="font-size: 20px"> Lokalizacja: @Html.ActionLink(@Model.Team.Location,"GoogleLocation","Team", new {location = @Model.Team.Location},new {target="_blank"})</p>


<hr />
<br />

<ul class="list-group">
    @foreach (var player in Model.Players)
    {

        <li class="list-group-item d-flex justify-content-between align-items-center">
            @Html.ActionLink(@player.Name, "PlayerView", "Player", new { Id = player.Id })
            <span class="badge badge-primary badge-pill" style="background-color: white;"><img src="@player.ImgUrl" /></span>
        </li>
    }
</ul>

